<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alon.mapper.dao.ProductInfoMapper">
    <sql id="select">
        id,name,spi_id,weight,product_desc
    </sql>
    <!-- resultMap最终还是要将结果映射到pojo上，type就是指定映射到哪一个pojo -->
    <!-- id：设置ResultMap的id -->
    <resultMap type="com.alon.model.ProductInfo" id="infoMap">
        <!-- 定义主键 ,非常重要。如果是多个字段,则定义多个id -->
        <!-- property：主键在pojo中的属性名 -->
        <!-- column：主键在数据库中的列名 -->
        <id property="id" column="id" />

        <!-- 定义普通属性 -->
        <result property="name" column="name" />
        <result property="spiId" column="spi_id" />
        <result property="weight" column="weight" />
        <result property="productDesc" column="product_desc" />
    </resultMap>
    <select id="getInfo" parameterType="com.alon.model.ProductInfo"
            resultMap="infoMap">
        SELECT
        id,name,spi_id,weight,product_desc
        FROM product_info
    </select>
</mapper>